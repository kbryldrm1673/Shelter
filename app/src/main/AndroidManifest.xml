<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kubra.koubitirme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".Application"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AnimalList"/>
        <activity android:name=".AnimalDetail"/>
        <activity android:name=".AnimalFood" />
        <activity android:name=".ui.quiz.QuizActivity" />
        <activity
            android:name=".ui.register.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>